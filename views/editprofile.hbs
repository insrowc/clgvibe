<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/forgotpassword.css">
    <title>Edit profile</title>
    <link rel="icon" type="image/svg-xml" href="./img/favicn.png" />
</head>
<style>
    
    body{
        overflow: scroll;
    }
    
    .input-div > div > h5{
        position: static;
        transform: none;
        text-align: left;
    }

    .profile-pic{
        height: 118px;
        width: 118px;
        border-radius: 50%;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .profile-pic img{
        height: 120px;
        width: 120px;

    }
    .row{
        display: flex;
        align-items: center;
        justify-content:space-evenly;
        flex-wrap: wrap;
    }
</style>
<body>
    <div class="container">
        <h3>Edit Profile Form:</h3>
         <form action="/editprofile" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="profile-pic">
         <img
              src="{{user.files.0.destination}}/{{user.files.0.originalname}}"
              alt="" id="profilepreview"
            />
            </div>
         <input
        type="file"
        name="userid"
        id="userid"
        style="width: 0;"
      />
        <label for="userid" class="flabl"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg> <span>Choose a file&hellip;</span></label>
           </div>
        <div class="input-div one">
            <div class="div">
              <h5>Name</h5>
              <input required type="text" name="fullName" id="fullName" value="{{ user.fullName }}" class="username input" />
            </div>
          </div>
        <div class="input-div one">
            <div class="div">
              <h5>Course</h5>
              <input required type="text" name="course" id="course" value="{{user.course}}" class="username input" />
            </div>
          </div>
        <div class="input-div one">
            <div class="div">
              <h5>Username</h5>
              <input required type="text" name="userName" id="userName" value="{{user.userName}}" class="username input" />
            </div>
          </div>
        <button type="submit" class="sub">Edit Profile</button>
    </form>
    </div>
</body>

<script>
  const profileInput = document.querySelector("#userid");
  const profileImg = document.querySelector("#profilepreview");

  const imgPreview = (input, img) => {
    if (input.files && input.files[0]) {
      let reader = new FileReader(input);
      reader.onload = function (e) {
        img.setAttribute("src", e.target.result);
      };
      reader.readAsDataURL(input.files[0]);
    }
  };

  profileInput.addEventListener("change", () => {
    imgPreview(profileInput, profileImg);
  });
</script>
